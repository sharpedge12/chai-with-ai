# Persona Configuration
PERSONA_GENAI_NEWS_ENABLED=true
PERSONA_PRODUCT_IDEAS_ENABLED=true

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL_FAST=mistral:instruct
OLLAMA_MODEL_SLOW=llama3:8b-instruct-q4_K_M

# Database
DATABASE_PATH=data/digest.db

# Content Filtering
GENAI_NEWS_MIN_RELEVANCE=0.6
PRODUCT_IDEAS_MIN_REUSABILITY=0.5
CONTENT_HOURS_LOOKBACK=24

# Reddit API (Get from reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=DigestBot/1.0

# Email Delivery
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.
com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your@email.com
EMAIL_TO=recipient@email.com
EMAIL_PASSWORD=your_app_password

# Telegram Delivery
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/digest.log